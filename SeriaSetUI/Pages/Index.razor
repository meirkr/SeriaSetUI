<table>
    @foreach (var line in GetAllCardsInfos().Batch(9))
    {
        <tr>
            @foreach (var (shape, color, lineStyle, numShapes) in line)
            {
                <td>
                    <Card NumShapes="numShapes" 
                            Shape="shape" 
                            Color="color"
                            FillStyle="lineStyle"
                          />
                </td>
            }
        </tr>
    }

</table>
